#!/bin/sh
name='busybox'
version='1.27.2'
sources=( "http://www.busybox.net/downloads/${name}-${version}.tar.bz2" )
homepage='http://busybox.net/'
license='GPLv2'

build_cmd="
    cd /source/${name}-${version} && \
    make silentoldconfig && \
    make -j ${cores_num:-1} && \
    make CONFIG_PREFIX=/binit/prefix install
"

deploy="/binit/prefix/bin/busybox"

fetch_source
install_source
build_source

